<div class="field">
  <%= f.label :email, 'Email', class: 'label wf-nicomoji' %>
  <div class="control has-icons-left has-icons-right">
    <%= f.email_field :email, class: 'input', type: 'email', placeholder: 'e.g. hotgehoge@gmail.com' %>
    <span class="icon is-small is-left">
      <i class="fas fa-envelope"></i>
    </span>
    <span class="icon is-small is-right">
      <i class="fas fa-exclamation-triangle"></i>
    </span>
  </div>
</div>

<div class="field">
  <%= f.label :password, 'Password', class: 'label wf-nicomoji' %>
  <div class="control">
    <%= f.password_field :password, class: 'input', type: 'password' %>
  </div>
</div>

<div class="field">
  <%= f.label :password_condirmation, 'Confirmation', class: 'label wf-nicomoji' %>
  <div class="control">
    <%= f.password_field :password_confirmation, class: 'input', type: 'password' %>
  </div>
</div>

<div data-hook="signup_below_password_fields"></div>
