<%= form_for Spree::User.new, as: :spree_user, url: spree.create_new_session_path do |f| %>
  <div class="field">
    <%= f.label :email, 'Email', class: 'label wf-nicomoji' %>
    <div class="control has-icons-left">
      <%= f.email_field :email, class: 'input', type: 'email', placeholder: 'e.g. hogehoge@gmail.com', tabindex: 1 %>
      <span class="icon is-small is-left">
        <i class="fas fa-envelope"></i>
      </span>
    </div>
  </div>

  <div class="field">
    <%= f.label :password, 'Password', class: 'label wf-nicomoji' %>
    <div class="control has-icons-left">
      <%= f.password_field :password, class: 'input', type: 'password', tabindex: 2 %>
      <span class="icon is-small is-left">
        <i class="fas fa-lock"></i>
      </span>
    </div>
  </div>

  <div class="field">
    <%= f.check_box :remember_me, tabindex: 3 %>
    <%= f.label :remember_me, 'Remember me' %>
  </div>

  <p><%= f.submit 'Login', class: 'button primary wf-nicomoji', tabindex: 4 %></p>
<% end %>
