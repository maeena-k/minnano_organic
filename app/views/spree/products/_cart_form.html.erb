<%= form_for :order, url: populate_orders_path do |f| %>
  <div id="inside-product-cart-form" data-hook="inside_product_cart_form" itemprop="offers" itemscope itemtype="http://schema.org/Offer">
    <div class="add-to-cart wf-nicomoji">
      <p class="wf-nicomoji"><%= @product.display_price %><p>
      <p>Quantity: <%= number_field_tag :quantity, 1, min: 1, class: 'add-to-cart-item';%></p>
      <%= button_tag class: 'btn btn-custom', id: 'add-to-cart-button', type: :submit do %>
        <%= t('spree.add_to_cart') %>
      <% end %>
    </div>
  </div>
<% end %>
