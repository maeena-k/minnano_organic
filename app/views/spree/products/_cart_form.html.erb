<%= form_for :order, url: populate_orders_path do |f| %>
<div id="inside-product-cart-form" data-hook="inside_product_cart_form" itemprop="offers" itemscope="itemscope" itemtype="http://schema.org/Offer">

  <div data-hook="product_price" class="columns five <%= !@product.has_variants? ? 'alpha' : 'omega' %>">

    <div id="product-price">
      <% if @product.master.can_supply? %>
        <link itemprop="availability" href="http://schema.org/InStock"/>
      <% elsif @product.variants.empty? %>
        <br/>
        <span class="out-of-stock"><%= t('spree.out_of_stock') %></span>
      <% end %>
    </div>
    <div class="add-to-cart wf-nicomoji font-grey">
      <p>Quantity:
        <%= number_field_tag :quantity, 1, min: 1, class: 'quantity-form';%>
      </p>
      <%= button_tag class: 'btn btn-custom', id: 'add-to-cart-button', type: :submit do %>
        <%= t('spree.add_to_cart') %>
      <% end %>
    </div>
  </div>
</div>
<% end %>
