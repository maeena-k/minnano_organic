<section class="related-products wf-nicomoji font-grey">
  <div class="related-producta-all">
    <div class="related_products-header mb8">
        <h4 style="font-size: 1.2em;">You might also like...</h4>
    </div>
    <div class="relate-products-listing">
      <% products.each do |product| %>
        <div class="related-products-item">
            <%= link_to product_path(product.id) do %>
              <%= image_tag product.display_image.attachment(:product) %>
            <% end %>
            <%= link_to product_path(product.id), class: 'font-grey' do %>
              <h6><%= product.name %></h6>
            <% end %>
            <h6><%= product.display_price %></h6>
        </div>
      <% end %>
    </div>
  </div>
</section>
