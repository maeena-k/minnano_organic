<%= render partial: 'spree/shared/error_messages', locals: { target: @spree_user } %>

<section class="customer is-centered section">
  <% if flash[:alert] %>
    <div class="flash errors"><%= flash[:alert] %></div>
  <% end %>
  <div class="form is-centered container">
    <p class="subtitle wf-nicomoji">Password Recovery</p>
    <div class="form-item is-centered container">
      <%= form_for Spree::User.new, as: :spree_user, url: spree.reset_password_path do |f| %>
        <div class="field">
          <%= f.label :email, 'Email', class: 'label wf-nicomoji' %>
          <div class="control has-icons-left">
            <%= f.email_field :email, class: 'input', type: 'email', placeholder: 'e.g. hogehoge@gmail.com', tabindex: 1 %>
            <span class="icon is-small is-left">
              <i class="fas fa-envelope"></i>
            </span>
          </div>
        </div>

        <p><%= f.submit 'Reset Password', class: 'button primary wf-nicomoji' %></p>
      <% end %>
    </div>
  </div>
</section>
