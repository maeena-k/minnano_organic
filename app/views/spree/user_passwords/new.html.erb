<section class="customer pt92">
  <%= render partial: 'spree/shared/error_messages', locals: { target: @spree_user } %>
  <div class="form container font-grey">
    <% if flash[:alert] %>
      <div class="flash errors"><%= flash[:alert] %></div>
    <% end %>
    <div class="form-item container">
      <p class="subtitle wf-nicomoji">Password Recovery</p>
      <div class="form-item is-centered container">
        <%= form_for Spree::User.new, as: :spree_user, url: spree.reset_password_path do |f| %>
          <div class="form-group">
            <%= f.label :email, 'Email', class: 'control-label wf-nicomoji' %>
            <div class="form-item has-feedback">
              <%= f.email_field :email, class: 'form-control', type: 'email', placeholder: 'e.g. hogehoge@gmail.com', tabindex: 1 %>
              <i class="fas fa-envelope form-control-feedback"></i>
            </div>
          </div>

          <p><%= f.submit 'Reset Password', class: 'btn btn-custom primary wf-nicomoji' %></p>
        <% end %>
      </div>
    </div>
  </div>
</section>
