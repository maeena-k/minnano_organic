<%= render 'spree/shared/error_messages', target: resource %>

<section class="customer section">
  <div class="form is-centered container">
    <p class="subtitle is-centered wf-nicomoji">Welcome to <br>Minnano Organic!</p>

    <div class="form-item is-centered container">
      <%= form_for resource, as: :spree_user, url: spree.registration_path(resource) do |f| %>
        <%= render partial: 'spree/shared/user_form', locals: { f: f } %>
        <p><%= f.submit 'Sign up', class: 'button primary wf-nicomoji' %></p>
      <% end %>
      <p class="form-item description">Or already have an account? => <%= link_to 'Login', spree.login_path %></p>
    </div>
  </div>
</section>
