<% if flash[:alert] %>
  <div class="flash errors"><%= flash[:alert] %></div>
<% end %>

<% @body_id = 'login' %>

<%= render 'spree/shared/error_messages', target: resource %>

<section class="customer section">
  <div class="form container">
    <p class="subtitle is-centered wf-nicomoji">Welcome Back to Minnano Organic!</p>

    <div class="is-centered container">
      <%= render partial: 'spree/shared/login' %>
      <p class="description">Or <%= link_to 'Create a new account', spree.signup_path %> / <%= link_to 'Forgot your password?', spree.recover_password_path %></p>
    </div>
  </div>
</section>
