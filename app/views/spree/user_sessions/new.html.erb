<% @body_id = 'login' %>

<%= render 'spree/shared/error_messages', target: resource %>

<section class="customer is-centered section">
  <% if flash[:alert] %>
    <div class="flash errors"><%= flash[:alert] %></div>
  <% end %>
  <div class="form is-centered container">
    <p class="subtitle wf-nicomoji">Welcome Back to <br>Minnano Organic!</p>

    <div class="form-item is-centered container">
      <%= render partial: 'spree/shared/login' %>
      <p class="form-item description">Or <%= link_to 'Create a new account', spree.signup_path %> / <%= link_to 'Forgot your password?', spree.recover_password_path %></p>
    </div>
  </div>
</section>
